<h1>Список новостей</h1>

<table>
  <tr>
    <th>Id</th>
    <th>Date</th>
    <th>Header</th>
    <th>Short text</th>
    <th>Full text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.id %></td>
    <td><%= news.date %></td>
    <td><%= news.header %></td>
    <td><%= news.short_text %></td>
    <td><%= news.full_text %></td>
    <td><%= link_to 'Show', news %></td>
    <td><%= link_to 'Edit', edit_news_path(news) %></td>
    <td><%= link_to 'Destroy', news, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

