<div class="row">
  <div class="span5">
    <h3><%= @news.header %></h3>
  </div>
  <div class="span2">
    <div class="btn-group">
      <%= link_to '<i class="icon-pencil"></i>'.html_safe, edit_news_path(@news) , :class => 'btn btn-small' %>
      <%= link_to '<i class="icon-remove"></i>'.html_safe, @news, confirm: 'Точно?', method: :delete , :class => 'btn btn-small' %>
    </div>

    <p class="muted"><%= @news.date.strftime("%H:%M %d/%m/%Y")  %></p>

    Раздел: <b><%= @news.trend.name %></b><br>

  </div>
  <div class="span3">

  </div>

</div>
<div class="row">
  <div class="span5">
    <%= @news.content.html_safe %>
  </div>
</div>

<%= link_to 'Back', news_index_path %>
